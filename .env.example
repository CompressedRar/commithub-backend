# CommitHub Environment Configuration Template
# Copy this to .env and fill in your actual values
# DO NOT commit actual .env file to version control

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development  # development, testing, or production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
DEBUG=false  # Set to true only in development

# =============================================================================
# SECURITY & SECRETS
# =============================================================================
SECRET_KEY=your-very-secure-random-secret-key-change-in-production
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=720  # 30 days

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development database (local)
LOCAL_DATABASE_URL=mysql+pymysql://root:your_password@localhost:3305/commithub_development

# Test database
TEST_DATABASE_URL=mysql+pymysql://root:your_password@localhost:3305/commithub_test

# Production database (remote)
PRODUCTION_DATABASE_URL=mysql+pymysql://prod_user:prod_password@prod-host.com/commithub_production

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
# For Gmail, use an "App Password" (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_PASSWORD=your-app-specific-password

MAIL_DEFAULT_SENDER=noreply@commithub.local

# =============================================================================
# AWS CONFIGURATION (if using AWS services)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Paste your Firebase service account JSON here (as a single-line string)
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project",...}

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
APP_NAME=CommitHub
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# FILE UPLOADS
# =============================================================================
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=xlsx,xls,pdf,doc,docx

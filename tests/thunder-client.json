{
  "info": {
    "name": "CommiHub API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/auth/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"secure123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Departments",
      "item": [
        {
          "name": "Get All Departments",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/departments"
          }
        },
        {
          "name": "Get Department by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/departments/1"
          }
        },
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/departments",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Department\",\n  \"description\": \"Testing\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "System Settings",
      "item": [
        {
          "name": "Get Settings",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/settings"
          }
        },
        {
          "name": "Reset Period",
          "request": {
            "method": "PATCH",
            "url": "{{base_url}}/api/v1/settings/reset",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            }
          }
        }
      ]
    },
    {
      "name": "PCR/OPCR",
      "item": [
        {
          "name": "Create OPCR",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/pcr/opcr",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"department_id\": 1,\n  \"ipcr_ids\": [1, 2, 3]\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
